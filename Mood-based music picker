import tkinter as tk

music_available = {
    "happy": "Pharrell Williams â€“ Happy",
    "sad": "Adele â€“ Someone Like You",
    "angry": "Imagine Dragons â€“ Believer",
    "stressed": "Lauv â€“ Breathe",
    "tired": "Kina â€“ Get You The Moon",
    "motivated": "Kanye West â€“ Stronger",
    "romantic": "The Weeknd â€“ Die for You",
    "chill": "Joji â€“ Slow Dancing in the Dark",
    "focused": "lofi beats â€“ 1 A.M Study Session",
    "excited": "Dua Lipa â€“ Physical"
}


def recommend_music():
    """Gets the selected mood and shows the recommended song."""
    mood = selected_mood.get()

    if mood in music_available:
        song = music_available[mood]
        result_label.config(
            text=f"For mood '{mood}', I recommend:\n{song}"
        )
    else:
        result_label.config(text="Please select a valid mood.")


root = tk.Tk()
root.title("Mood-Based Music Recommender")

root.minsize(400, 250)

title_label = tk.Label(
    root,
    text="Mood-Based Music Recommender ðŸŽµ",
    font=("Arial", 14, "bold")
)
title_label.pack(pady=10)

instruction_label = tk.Label(
    root,
    text="Select your current mood from the list:",
    font=("Arial", 10)
)
instruction_label.pack(pady=5)

mood_list = list(music_available.keys())
selected_mood = tk.StringVar(root)
selected_mood.set(mood_list[0]) 

mood_menu = tk.OptionMenu(root, selected_mood, *mood_list)
mood_menu.config(font=("Arial", 10))
mood_menu.pack(pady=5)

recommend_button = tk.Button(
    root,
    text="Get Recommendation",
    font=("Arial", 11, "bold"),
    command=recommend_music
)
recommend_button.pack(pady=10)

result_label = tk.Label(
    root,
    text="",
    font=("Arial", 11),
    wraplength=350,
    justify="center"
)
result_label.pack(pady=10)

exit_button = tk.Button(
    root,
    text="Exit",
    font=("Arial", 10),
    command=root.quit
)
exit_button.pack(pady=5)

root.mainloop()
